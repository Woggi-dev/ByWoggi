<Window x:Class="ByWoggi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ByWoggi"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <!-- Родительский контейнер -->
    <Grid Background="#FF242424">
        <!-- Контейнер со всем контентом  -->
        <Border Margin="120,35" Background="#FF12120C" CornerRadius="10" ClipToBounds="False">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Ряды под шапку, разделитель и основной контент с играми  -->
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="10">
                    </RowDefinition>
                    <RowDefinition Height="388*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- Колонки под шапку, основной контент с играми, разделитель и панель с выбором жанров игр  -->
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- Разделитель контента  -->
                <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#FF242424"></Border>
                
                <!-- Шапка  -->
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <!-- Левая группа: иконка и название -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left" Width="Auto">
                        <!-- Иконка -->
                        <Image Source="images/main.png" Width="50" Margin="2 0 6 0"/>
                        <!-- Название приложения -->
                        <TextBlock Text="BYWOGGI" VerticalAlignment="Center" FontFamily="Bahnschrift" FontSize="23" Foreground="White" FontWeight="Bold" Height="24" />
                    </StackPanel>

                    <!-- Правая группа: кнопка смены темы и иконка профиля -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Right">
                        <!-- Кнопка для смены темы -->
                        <Image Source="images\sun.png" Width="30" Height="30" Margin="10"/>
                        <!-- Иконка профиля -->
                        <Image Source="images\avatar.png" Width="50" Margin="10"/>
                    </StackPanel>
                    
                    <!-- Центральная группа: поиск с закругленными краями -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto">
                        <!-- Бордер для закругления краев текстбокса -->
                        <Border CornerRadius="5" Background="#FF242424" Padding="0" Width="212" >
                            <!-- Текстбокс поиска -->
                            <TextBox Text="Поиск..." 
                                 Padding="10 7 2 0" Foreground="#FFC9C4C4" BorderBrush="{x:Null}" 
                                 Background="#FF242424" FontFamily="Bahnschrift" UseLayoutRounding="False" 
                                 Width="210" Height="31" 
                                 SelectionBrush="{x:Null}"/>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Grid>

        </Border>
    </Grid>
</Window>
